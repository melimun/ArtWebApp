@model ArtWebApp.Models.Item


<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.5.2/dist/css/bootstrap.min.css">
    <title>Add Item</title>
</head>

<body>

    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        <h4>Welcome!</h4>
                    </div>
                    <div class="card-body">
                        <form asp-action="Login" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="mb-3">
                                <label asp-for="name" class="form-label">Item name:</label>
                                <input type="text" class="form-control" id="name" name="name"
                                    placeholder="Enter Item Name" required>
                            </div>
                            <div class="mb-3">
                                <label asp-for="price" class="form-label">Price:</label>
                                <input type="text" class="form-control" id="price" name="price"
                                    placeholder="Enter Price" required>
                            </div>
                            <div class="mb-3">
                                <label asp-for="description" class="form-label">Description:</label>
                                <input type="text" class="form-control" id="description" name="description"
                                    placeholder="Enter Description" required>
                            </div>
                            <div class="mb-3">
                                <label asp-for="condition" class="form-label">Condition:</label>
                                <input type="text" class="form-control" id="condition" name="condition"
                                    placeholder="Enter Condition" required>
                            </div>
                            <div class="mb-3">
                                <label asp-for="shippingPrice" class="form-label">Shipping Price:</label>
                                <input type="text" class="form-control" id="shipping" name="shipping"
                                    placeholder="Enter Shipping" required>
                            </div>
                            <div class="text-center">

                                <div class="checkbox mb-3">
                                    <label>
                                        <input type="checkbox" value="ia-available"> is-available
                                    </label>
                                </div>

                                <button class="btn btn-primary" asp-action="ViewItems">Add Item</button>
                                @* <button type="submit" class="btn btn-primary btn-block">Login</button> *@


                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</body>

</html>