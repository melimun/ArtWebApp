@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <link href="~/css/index.css" rel="stylesheet" />

    <title>Art Web App</title>

</head>

<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        background-color: black;
        color: white;
    }

    .container-bg {
        text-align: center;
    }

    .container {
        position: relative;
        overflow: hidden;
    }

    .about-item-img {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        opacity: 0.4;
        z-index: -5000;
    }

    .about-item-img img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .index_title {
        font-size: 4vh;
        color: wheat;
    }

    .index_header {
        font-size: 6vh;
        font-weight: 500;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .index_subtitle {
        color: wheat;
        font-size: 3vh;
    }
</style>

<body>

    <section class="section about-2 position-relative">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    @* <div class="about-item pr-3 mb-5 mb-lg-0"> *@
                    <span class="h6 index_title text-color">What we are</span>
                    <h2 class="mt-3 index_header mb-4 position-relative content-title">We are dynamic team of developers
                    </h2>
                    <p class="mb-5 index_subtitle">The primary objective is to create a user-friendly marketplace that
                        allows
                        students–whether they come from Sheridan College or a different university– to be able to
                        showcase, sell and trade artwork.
                    </p>

                    <div class="text-center">

                        <a class="btn btn-primary btn-lg" asp-action="Login">Sign in</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="about-item-img">
                    <img loading="lazy" src="~/images/index.jpg" alt="about-image" class="img-fluid">
                </div>
            </div>
        </div>
        </div>
    </section>
    @* <div class="container-bg text-center">
    <h3>Add Item</h3>
    <div class="text-center btn-overlay">
    <a class="btn btn-primary btn-lg" asp-action="AddItem">Add Item</a>
    </div>
    </div> *@
</body>

</html>
