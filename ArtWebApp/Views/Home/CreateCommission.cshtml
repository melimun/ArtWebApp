@model ArtWebApp.Models.Commission
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
    <title>Create commission</title>
</head>

<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center"><h4>RSVP</h4></div>
        <div class="panel-body">
            @using (Html.BeginForm(FormMethod.Post))
            {
                @Html.ValidationSummary()
                <div class="form-group">
                    <label>Your name:</label>
                    @Html.TextBoxFor(x => x.name, new { @class = "formcontrol" })
                </div>
                <div class="form-group">
                    <label>Your email:</label>
                    @Html.TextBoxFor(x => x.description, new { @class = "formcontrol" })
                </div>
                <div class="form-group">
                    <label>Price:</label>
                    @Html.TextBoxFor(x => x.price, new { @class = "formcontrol" })
                </div>

                <div class="text-center">
                    <input class="btn btn-success" type="submit" name="Enter"/>
                </div>

            }
</body>

</html>