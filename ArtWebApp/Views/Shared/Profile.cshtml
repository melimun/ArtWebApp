@page
@model ArtWebApp.Models.Profile
@{
    Layout = "_Layout";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">

    
    </head>
<body>

<section class="h-100 gradient-custom-2">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card">
            
          <div class="rounded-top text-white d-flex flex-row" style="background-color: #000000; height:200px;">
            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
              <img src="https://via.placeholder.com/150"
                alt="placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                style="width: 150px; z-index: 1">

            <div class="btn-group">
    <button type="button" class="btn btn-outline-dark" data-mdb-ripple-color="success">
        <i class="bi bi-pencil-square"></i>
    </button>
    <a class="btn btn-outline-dark" data-mdb-ripple-color="info" asp-action="ChatHub">
        <i class="bi bi-chat-dots"></i>
    </a>
</div>

            </div>
            <div class="ms-3" style="margin-top: 130px;">
              <h5>Username</h5>
              <p>Online/Offline</p>
            </div>
          </div>
          <div class="p-4 text-black" style="background-color: #f8f9fa;">
            <div class="d-flex justify-content-end text-center py-1">
              <div class="px-3">
                <p class="mb-1 h5">1000</p>
                <p class="small text-muted mb-0">Listings</p>
              </div>
            </div>
          </div>
          <div class="card-body p-4 text-black">
            <div class="mb-5">
              <p class="lead fw-normal mb-1">About</p>
              <div class="p-4" style="background-color: #f8f9fa;">
                <p class="font-italic mb-1">Bio here</p>
              </div>
            </div>
            </div>
          </div>
      </div>
    </div>
  </div>
</section>

</body>
</html>